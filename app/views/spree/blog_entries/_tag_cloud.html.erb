<% tags = Spree::BlogEntry.visible.tag_counts_on(:tags).sort_by(&:count) %>
<% if tags.present? %>
	<div class="blog_tag_cloud_wrapper">
	  <h5><%= Spree.t('blog.tags') %></h5>
	  <ul class="blog_tag_cloud">
	    <% tags = Spree::BlogEntry.visible.tag_counts_on(:tags) %>
	    <% tag_cloud(tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
	      <li>
	        <%= link_to tag.name, blog_tag_path(tag.name), :class => css_class %>
	      </li>
	    <% end %>
	  </ul>
	</div>
<% end %>
